{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Sender",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/sender.exe",
            "args": [
                "--host", "127.0.0.1",
                "--port", "8443"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Sender"
        },
        {
            "name": "Debug Receiver",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/receiver.exe",
            "args": [
                "--port", "8443"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Receiver"
        },
        {
            "name": "Debug Sender (Custom Args)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/sender.exe",
            "args": [],
